{
  "name": "@peakactivity/signifyd-connector",
  "version": "0.0.1-development",
  "description": "A lightweight npm package for using Signifyd on the Web.",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "test": "mocha",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/malewis5/signifyd-connector.git"
  },
  "keywords": [],
  "author": "Matthew Lewis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/malewis5/signifyd-connector/issues"
  },
  "homepage": "https://github.com/malewis5/signifyd-connector#readme",
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "semantic-release": "^19.0.3",
    "@types/chai": "^4.3.3",
    "chai": "^4.3.6"
  }
}
